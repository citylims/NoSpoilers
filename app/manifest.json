{
  "name": "__MSG_appName__",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "default_locale": "en",
  "options_page": "options/index.html",
  "icons": {
    "16": "images/icon.png",
    "128": "images/icon.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon.png",
      "38": "images/icon.png"
    },
    "default_title": "NoSpoiler",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "http://*/",
    "https://*/"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["jquery.min.js", "scripts/content.js"]
    }
  ]
}
